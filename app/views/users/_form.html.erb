<%= form_for @user do |f| %>

  <% if @user.errors.any? %>

    <div class="errors">

      <% @user.errors.full_messages.each do |message| %>

        <p><%= message %></p>

      <% end %>

    </div>

  <% end %>


  <%= simple_form_for @user do |f| %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit %>
  <% end %>

<% end %>
